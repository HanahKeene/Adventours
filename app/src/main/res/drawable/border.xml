<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFF"/> <!-- Fill color (red in this example) -->
            <corners android:radius="10dp"/> <!-- Corner radius (adjust to your preference) -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</layer-list>

