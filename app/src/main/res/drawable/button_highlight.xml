<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFF"/> <!-- Fill color (red in this example) -->
            <corners android:radius="10dp"/> <!-- Corner radius (adjust to your preference) -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>

<item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#30AFBF" />
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
