<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light"></style>


    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/cyan</item>
    </style>

    <!-- Night Mode Dialog Theme -->
    <style name="DialogTheme.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/cyan</item>
        <!-- Adjust background and text colors -->
        <item name="android:background">@color/black</item> <!-- Set background color -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Clock" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="Clock.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/cyan</item>
        <item name="android:background">#585454</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    

</resources>