 <resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Adventours" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

     <style name="LINE">
         <item name="android:background">@color/black</item>
     </style>

     <style name="TEXT">
         <item name="android:textColor">#1E1D1D</item>
         <item name="android:drawableTint">#1E1D1D</item>
     </style>

     <style name="HINT">
         <item name="android:textColorHint">#1E1D1D</item>
     </style>

     <style name="PLACE">
         <item name="android:textColor">@color/dark_blue</item>
         <item name="android:drawableTint">@color/dark_blue</item>
     </style>

     <style name="HEADER">
         <item name="android:background">@color/dark_blue</item>
     </style>

     <style name="SEARCH">
         <item name="android:background">@drawable/round_padding</item>
         <item name="android:textColor">#4B4F4F</item>
         <item name="android:drawableTint">#4B4F4F</item>
     </style>

     <style name="CARD">
         <item name="android:background">@color/white</item>
     </style>

     <style name="VIEWDETAILBTN">
         <item name="android:background">@drawable/buttonwborder</item>
         <item name="android:textColor">#4B4F4F</item>
     </style>

     <style name="PRICETEXT">
         <item name="android:textColor">@color/red</item>
     </style>

     <style name="BUTTON">
         <item name="android:background">@drawable/button</item>
         <item name="android:textColor">@color/white</item>
     </style>

     <style name="ACTION">
         <item name="android:background">@color/cyan</item>
     </style>

     <style name="NAVBAR">
         <item name="android:background">@color/dark_blue</item>
     </style>
</resources>

