<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="428dp"
        android:layout_height="994dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="68dp"
                            android:layout_height="39dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/baseline_arrow_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="41dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/myTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="System Update"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40sp"
                android:paddingTop="30sp"
                android:text="Hello Users!"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView39"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:paddingStart="40sp"
                android:paddingTop="15sp"
                android:text="We're pleased to inform you that our mobile app has received a new update."
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="423dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/whats_new"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:paddingStart="40sp"
                android:paddingTop="30sp"
                android:text="What's New:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="395dp"
                android:layout_height="83dp"
                android:paddingStart="40sp"
                android:paddingTop="15sp"
                android:text="Enhanced functionality for quicker."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="395dp"
                android:layout_height="97dp"
                android:paddingStart="40sp"
                android:paddingTop="15sp"
                android:text="Enhancements to Stability and bug fixes."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="395dp"
                android:layout_height="150dp"
                android:paddingStart="40sp"
                android:paddingTop="15sp"
                android:text="Please update your program to the most recent version right away to take advantage of the newest improvements and bug fixes. We appreciate you as one of our users."
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>