<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".SigninActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="500dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/name"
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:layout_above="@+id/ageNumber"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/round_padding"
                android:ems="10"
                android:hint=" Name"
                android:inputType="text"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:layout_above="@+id/birthday"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="21dp"
                android:layout_toEndOf="@+id/name"
                android:background="@drawable/round_padding"
                android:ems="10"
                android:hint=" Surname"
                android:inputType="text"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/ageNumber"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_padding"
                android:ems="10"
                android:hint=" Age"
                android:inputType="number"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/ageNumber"
                android:background="@drawable/round_padding"
                android:ems="10"
                android:hint=" Birthday:"
                android:inputType="date"
                android:paddingStart="15dp" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="167dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/female"
                    android:buttonTint="#FFFFFF"
                    android:text=" Male"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="167dp"
                    android:layout_height="59dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="-7dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="date"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/City"
                android:layout_width="365dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="225dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/round_padding"
                android:hint="City"
                android:paddingStart="15dp" />

            <Button
                android:id="@+id/verifyButton"
                android:layout_width="114dp"
                android:layout_height="57dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="310dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_padding"
                android:text="Verify"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="242dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="310dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/verifyButton"
                android:background="@drawable/round_padding"
                android:ems="10"
                android:hint=" Mobile Number"
                android:inputType="phone"
                android:paddingStart="15dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@+id/phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_padding"
                android:text="SUBMIT"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:contextClickable="true"
        android:hint="BACK"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/username"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_padding"
        android:drawableLeft="@drawable/baseline_person"
        android:ems="10"
        android:hint=" Username"
        android:inputType="text"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupText" />

    <EditText
        android:id="@+id/email"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:background="@drawable/round_padding"
        android:drawableLeft="@drawable/baseline_email"
        android:ems="10"
        android:hint=" E-mail"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="I AGREE  WITH TERMS AND CONDITION"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/checkterms"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:buttonTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/terms"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>