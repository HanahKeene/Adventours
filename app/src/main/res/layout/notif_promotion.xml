<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cyan"
                        android:paddingTop="16dp">

                            <LinearLayout
                                android:layout_width="89dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView11"
                                    android:layout_width="68dp"
                                    android:layout_height="39dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/baseline_arrow_back" />
                            </LinearLayout>

                                <TextView
                                    android:id="@+id/myTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="7dp"
                                    android:text="Promotions"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="442dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/promotions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="524dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/escape"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Escape to the ultimate vacation experience with our exclusive Discover Paradise Package." />

            <TextView
                android:id="@+id/accomodation"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="Hotel Accomodation"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deluxe"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="3 nights in a Deluxe Ocean View Suite" />

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:text="Breakfast for three" />

            <TextView
                android:id="@+id/spa"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:text="Spa and fitness access" />

            <TextView
                android:id="@+id/restaurant"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="25dp"
                android:text="Restaurant Dining"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course_dinner"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="3 Course Dinner for three" />

            <TextView
                android:id="@+id/tours"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="25dp"
                android:text="Tours and Activities: Choose 2 adventures"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Sunset Cruise" />

            <TextView
                android:id="@+id/snorkeling"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Snorkeling" />

            <TextView
                android:id="@+id/cultural"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Cultural tour" />

            <TextView
                android:id="@+id/hiking"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Hiking" />

            <TextView
                android:id="@+id/price"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="25dp"
                android:text="Price: Starts at 1799php per person"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/travel_dates"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:text="Travel Dates: Dec. 1, 2023 to Dec. 30,2023"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:text="Book now for a memorable gataway!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/changebutton"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/login_padding"
                android:padding="12dp"
                android:text="RESERVE NOW"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
