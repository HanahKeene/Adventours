<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        style="@style/ACTION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_arrow_back"
            android:textColor="@color/white"
            android:text="Settings"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/biometricsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:padding="20dp"
            style="@style/TEXT"
            android:text="Biometrics Authentication" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8E8B8C" />

        <TextView
            android:id="@+id/pushnotifbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:padding="20dp"
            style="@style/TEXT"
            android:text="Push Notifications" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8E8B8C" />

        <TextView
            android:id="@+id/deleteaccntbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="20dp"
            style="@style/TEXT"
            android:text="Delete Account" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8E8B8C" />


        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Night Mode"
            android:padding="20dp"
            style="@style/TEXT"
            android:layout_weight="1"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>