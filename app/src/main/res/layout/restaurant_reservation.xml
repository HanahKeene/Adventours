<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/restaurant_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15sp"
                    android:paddingTop="25sp"
                    android:text="Restaurant Reservation Form"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/form"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15sp"
                    android:paddingTop="2sp"
                    android:text="Please fill in this Restaurant Reservation Form to book a table for a period you would like to stay."
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="279dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="193dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="199dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="185dp"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15sp"
                                    android:text="Name"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/editTextText3"
                                    android:layout_width="167dp"
                                    android:layout_height="52dp"
                                    android:layout_marginLeft="15sp"
                                    android:background="@drawable/border"
                                    android:ems="10"
                                    android:hint="First"
                                    android:inputType="text"
                                    android:paddingStart="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="183dp"
                                android:layout_height="20dp" />

                            <EditText
                                android:id="@+id/last"
                                android:layout_width="172dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/border"
                                android:ems="10"
                                android:hint="Last"
                                android:inputType="text"
                                android:paddingStart="15sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="15sp"
                            android:text="Address"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextText4"
                            android:layout_width="372dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="15sp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:hint="Address"
                            android:inputType="text"
                            android:paddingStart="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="208dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="185dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="15sp"
                                android:text="Name"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/email_edit"
                                android:layout_width="167dp"
                                android:layout_height="51dp"
                                android:layout_marginLeft="15sp"
                                android:background="@drawable/border"
                                android:ems="10"
                                android:hint="E-mail"
                                android:inputType="text"
                                android:paddingStart="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="202dp"
                            android:layout_height="95dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/contact"
                                android:layout_width="185dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="15sp"
                                android:text="Name"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/contact_no"
                                android:layout_width="167dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="15sp"
                                android:background="@drawable/border"
                                android:ems="10"
                                android:hint="Contact No."
                                android:inputType="text"
                                android:paddingStart="15sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="15sp"
                    android:paddingTop="7dp"
                    android:text="Check in"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15sp"
                android:paddingTop="7dp"
                android:text="Check out"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="61dp"
                android:orientation="horizontal"
                android:paddingStart="15sp">


                <EditText
                    android:id="@+id/in_date"
                    android:layout_width="154dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:drawableRight="@drawable/baseline_calendar_black"
                    android:ems="10"
                    android:hint="mm/dd/year"
                    android:inputType="date"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="208dp"
                android:layout_height="61dp"
                android:orientation="horizontal"
                android:paddingStart="15sp">


                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/out_date"
                    android:layout_width="154dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:drawableRight="@drawable/baseline_calendar_black"
                    android:ems="10"
                    android:hint="mm/dd/year"
                    android:inputType="date"
                    android:paddingStart="15sp"
                    android:paddingRight="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="15sp"
                        android:paddingTop="7dp"
                        android:text="Rooms"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:text="10"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        app:srcCompat="@drawable/add" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/adults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15sp"
                    android:paddingTop="7dp"
                    android:text="Adults"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:src="@drawable/minus" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:text="10"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            app:srcCompat="@drawable/add" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/child"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="15sp"
                        android:paddingTop="7dp"
                        android:text="Child"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:src="@drawable/minus" />

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:text="10"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            app:srcCompat="@drawable/add" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/submit"
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_padding"
                android:text="Reserve"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>